<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickFrame"
        android:text="Frame Layout"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/btnLinear"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:onClick="onCLickLinear"
        android:text="Linear Layout"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/btnRelative"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:onClick="onCLickRelative"
        android:text="Relative Layout"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/btnTable"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="104dp"
        android:onClick="onCLickTable"
        android:text="Table Layout"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/btnGrid"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:onClick="onCLickGrid"
        android:text="Grid Layout"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>