<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/preguntaEspecialidad"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.123" />

    <RadioGroup
        android:id="@+id/radioGroupInformatica"
        android:layout_width="261dp"
        android:layout_height="211dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioButtonRedes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/InformaticaRedes" />

        <RadioButton
            android:id="@+id/radioButtonDesarrollo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/InformaticaDesarrollo" />

        <RadioButton
            android:id="@+id/radioButtonAuditoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/InformaticaAuditoria" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>